import { useState, useEffect } from 'react';
import PerformanceMonitor from './PerformanceMonitor';

const scenarioConfigs = {
  light: {
    title: 'Light Test',
    description: 'Small number of resources for baseline performance',
    images: {
      small: 5
    },
    styles: 3,
    scripts: 2
  },
  heavy: {
    title: 'Heavy Test',
    description: 'Large files and many resources',
    images: {
      small: 20,
      medium: 10,
      large: 5
    },
    styles: 5,
    scripts: 10
  },
  many: {
    title: 'Many Resources Test',
    description: 'Many small files to test multiplexing',
    images: {
      small: 50
    },
    styles: 5,
    scripts: 10
  }
};

function TestScenario({ scenarioType }) {
  const [assetsLoaded, setAssetsLoaded] = useState(false);
  const [loadedAssets, setLoadedAssets] = useState([]);

  const config = scenarioConfigs[scenarioType] || scenarioConfigs.light;

  useEffect(() => {
    const assets = [];

    // Load images
    if (config.images.small) {
      for (let i = 1; i <= config.images.small; i++) {
        assets.push({
          type: 'image',
          src: `/assets/images/small/image-${i}.svg`,
          size: 'small'
        });
      }
    }

    if (config.images.medium) {
      for (let i = 1; i <= config.images.medium; i++) {
        assets.push({
          type: 'image',
          src: `/assets/images/medium/image-${i}.svg`,
          size: 'medium'
        });
      }
    }

    if (config.images.large) {
      for (let i = 1; i <= config.images.large; i++) {
        assets.push({
          type: 'image',
          src: `/assets/images/large/image-${i}.svg`,
          size: 'large'
        });
      }
    }

    // Load scripts
    for (let i = 1; i <= config.scripts; i++) {
      const script = document.createElement('script');
      script.src = `/assets/scripts/dummy-${i}.js`;
      script.async = true;
      document.body.appendChild(script);
    }

    // Load styles
    for (let i = 1; i <= config.styles; i++) {
      const link = document.createElement('link');
      link.rel = 'stylesheet';
      link.href = `/assets/styles/style-${i}.css`;
      document.head.appendChild(link);
    }

    setLoadedAssets(assets);
    setAssetsLoaded(true);
  }, [scenarioType]);

  return (
    <div className="min-h-screen bg-gray-50 py-8">
      <div className="container mx-auto px-4 max-w-7xl">
        {/* Header */}
        <div className="mb-8 text-center">
          <h1 className="text-4xl font-bold text-gray-900 mb-2">{config.title}</h1>
          <p className="text-lg text-gray-600">{config.description}</p>
        </div>

        {/* Performance Monitor */}
        <div className="mb-8">
          <PerformanceMonitor scenarioType={scenarioType} />
        </div>

        {/* Test Configuration */}
        <div className="bg-white rounded-lg shadow p-6 mb-8">
          <h2 className="text-2xl font-semibold mb-4">Test Configuration</h2>
          <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div className="bg-blue-50 p-4 rounded">
              <div className="text-sm text-gray-600">Images</div>
              <div className="text-2xl font-bold text-blue-600">
                {(config.images.small || 0) + (config.images.medium || 0) + (config.images.large || 0)}
              </div>
              <div className="text-xs text-gray-500 mt-1">
                {config.images.small && `${config.images.small} small, `}
                {config.images.medium && `${config.images.medium} medium, `}
                {config.images.large && `${config.images.large} large`}
              </div>
            </div>
            <div className="bg-green-50 p-4 rounded">
              <div className="text-sm text-gray-600">CSS Files</div>
              <div className="text-2xl font-bold text-green-600">{config.styles}</div>
            </div>
            <div className="bg-purple-50 p-4 rounded">
              <div className="text-sm text-gray-600">JS Files</div>
              <div className="text-2xl font-bold text-purple-600">{config.scripts}</div>
            </div>
          </div>
        </div>

        {/* Loaded Assets Display */}
        {assetsLoaded && (
          <div className="bg-white rounded-lg shadow p-6">
            <h2 className="text-2xl font-semibold mb-4">Loaded Images</h2>
            <div className="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
              {loadedAssets.map((asset, index) => (
                <div key={index} className="relative group">
                  <img
                    src={asset.src}
                    alt={`Test asset ${index + 1}`}
                    className="w-full h-32 object-cover rounded shadow hover:shadow-lg transition-shadow"
                    loading="eager"
                  />
                  <div className="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-xs p-1 rounded-b opacity-0 group-hover:opacity-100 transition-opacity">
                    {asset.size}
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  );
}

export default TestScenario;
